<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="/css/index.css">
    <link rel="stylesheet" href="/js/script.js">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" href="/img/favicon.jpeg" type="image/x-icon" />
    <title>Lista de tarefas</title>
</head>
<body>

    <%- include('header'); %>

   <div class="container mt-5">
    
    <form method="post" id="enviar" action="/enviar" class="form" onsubmit="refresh()"> 

        <div class="leftContent">

            <div class="cadastrarTarefa">

                <input type="text" class="form-control" name="title" placeholder="Título" >
        
                <textarea name="content" placeholder="Conteudo" class="form-control" ></textarea>
        
                <button class="btn btn-success">Nova tarefa</button>

            </div>
        </div>

       </form>

       <div class="rightContent">
       
           <div class="top">
              <span>Título</span>
              <span>Conteúdo</span>
              <span>Deletar</span>
          </div>

          <hr id="horizontalCut">
           
           <div class="tasks">
               


                <% tarefas.forEach((task)=>  {%>
                    
                    
                    <div class="task">
                    

                        <div class="titleTask"><%=task.title %></div>
                        <div class="contentTask"><%=task.content %></div>
                            <form id="delete" method="post" action="/delete">
                                <input type="hidden" name="id" value='<%= task.id %>'>
                                <button class="btnDel" type="submit">X</button>
                            </form>    
                    </div>

                    <% }) %>

            </div>


       </div>

    </form>

   </div>

    <%- include('footer'); %>
    
</body>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
</html>